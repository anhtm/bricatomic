{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": "airbnb",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "func-names": "off",
    "no-underscore-dangle": [
      "warn",
      {
        "allowAfterThis": true
      }
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "strict": [
      "error",
      "safe"
    ],
    "max-len": [
      "error",
      120,
      2
    ],
    "arrow-parens": [
      "error",
      "always"
    ],
    "arrow-body-style": [
      "error",
      "as-needed",
      {
        "requireReturnForObjectLiteral": true
      }
    ],
    "newline-per-chained-call": [
      "error"
    ],
    "nonblock-statement-body-position": [
      "error",
      "below"
    ],
    "no-empty-function": [
      "error",
      {
        "allow": [
          "constructors"
        ]
      }
    ],
    "curly": [
      "error",
      "all"
    ]
  }
}